{
  "devDependencies": {
    "@nx/dotnet": "22.0.1",
    "@nx/eslint": "22.0.1",
    "@nx/expo": "22.0.1",
    "@nx/express": "22.0.1",
    "@nx/jest": "22.0.1",
    "@nx/js": "22.0.1",
    "@nx/next": "22.0.1",
    "@nx/node": "22.0.1",
    "@nxlv/python": "^21.2.0",
    "@openapitools/openapi-generator-cli": "^2.13.4",
    "@swc-node/register": "~1.9.2",
    "@swc/core": "~1.7.26",
    "@swc/helpers": "~0.5.11",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jest": "^30.1.1",
    "lint-staged": "^16.1.5",
    "nx": "22.0.1",
    "prettier": "^3.6.2",
    "prettify-xml": "^1.2.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.1",
    "typescript": "5.9.3"
  },
  "scripts": {
    "prepare": "husky",
    "// Getting Started": "",
    "// → First time setup: npm run hooks:setup": "",
    "// → Python dev:       npm run python:env:full": "",
    "// → .NET dev:         npm run dotnet:env": "",
    "// Git Hooks": "",
    "hooks:setup": "node tools/hooks/setup-hooks.js",
    "// NX Workspace Extensions": "",
    "nx:add-python": "node tools/python/scripts/setup-nx-python.js",
    "// Workspace Management": "",
    "clean": "npm run nx:reset && rimraf dist node_modules/.cache",
    "// Quality Checks": "",
    "pre-commit": "node scripts/pre-commit.js",
    "pre-push": "node scripts/pre-push.js",
    "// NX Core Commands": "",
    "nx:repair": "node tools/nx/repair-nx.js",
    "nx:reset": "npm run nx:repair && nx reset && node tools/nx/auto-tag-projects.js",
    "nx:tag-projects": "node tools/nx/auto-tag-projects.js",
    "nx:graph": "npm run nx:reset && nx graph",
    "nx:run-many": "npm run nx:reset && node tools/nx/safe-run-many.js",
    "nx:affected": "npm run nx:reset && nx affected || echo No affected projects found",
    "nx:list-projects": "nx show projects",
    "nx:workspace-format": "nx format:write --all",
    "nx:workspace-format-check": "nx format:check --all",
    "// Node.js": "",
    "node:help": "node tools/node/scripts/node-help.js",
    "node:check-version": "node tools/node/scripts/check-node-version.js",
    "node:apply-configs": "node tools/node/scripts/apply-node-configs.js",
    "nx:node-dev": "npm run nx:reset && node tools/nx/safe-run-many.js --target=serve --projects=tag:node",
    "nx:node-build": "node tools/nx/safe-run-many.js --target=build --projects=tag:node",
    "nx:node-test": "node tools/nx/safe-run-many.js --target=test --projects=tag:node",
    "nx:node-lint": "node tools/nx/safe-run-many.js --target=lint --projects=tag:node",
    "nx:node-type-check": "node tools/nx/safe-run-many.js --target=type-check --projects=tag:node",
    "nx:node-format": "node tools/nx/safe-run-many.js --target=format --projects=tag:node",
    "nx:node-format-check": "node tools/nx/safe-run-many.js --target=format-check --projects=tag:node",
    "// .NET": "",
    "dotnet:env": "node tools/dotnet/scripts/dotnet-dev-setup.js",
    "dotnet:restore": "node tools/dotnet/scripts/dotnet-packages.js",
    "dotnet:restore:project": "node tools/dotnet/scripts/dotnet-packages.js install",
    "dotnet:help": "node tools/dotnet/scripts/dotnet-help.js",
    "dotnet:setup-projects": "node tools/dotnet/scripts/setup-dotnet-projects.js",
    "nx:dotnet-dev": "npm run nx:reset && node tools/nx/safe-run-many.js --target=serve --projects=tag:dotnet",
    "nx:dotnet-build": "node tools/nx/safe-run-many.js --target=build --projects=tag:dotnet",
    "nx:dotnet-test": "node tools/nx/safe-run-many.js --target=test --projects=tag:dotnet",
    "nx:dotnet-lint": "node tools/nx/safe-run-many.js --target=lint --projects=tag:dotnet",
    "nx:dotnet-format": "node tools/nx/safe-run-many.js --target=format --projects=tag:dotnet",
    "nx:dotnet-format-check": "node tools/nx/safe-run-many.js --target=format-check --projects=tag:dotnet",
    "// Python": "",
    "python:env": "node tools/python/python-dev-setup.js && node tools/python/scripts/setup-nx-python.js",
    "python:env:full": "node tools/python/python-dev-setup.js all && node tools/python/scripts/setup-nx-python.js",
    "python:deps": "node tools/python/python-dev-setup.js",
    "python:deps:all": "node tools/python/python-dev-setup.js all",
    "python:help": "node tools/python/python-dev-setup.js --help || node tools/python/python-dev-setup.js",
    "python:format": ".venv\\Scripts\\black . --exclude \"(/\\.venv/|/node_modules/|/\\.git/|/\\.nx/|/__pycache__/|/dist/|/build/)\"",
    "python:lint": ".venv\\Scripts\\flake8 . --config=tools/python/.flake8 && .venv\\Scripts\\mypy . --config-file=tools/python/mypy.ini",
    "python:check": "npm run python:format && npm run python:lint",
    "nx:python-dev": "npm run nx:reset && node tools/nx/safe-run-many.js --target=serve --projects=tag:python",
    "nx:python-build": "node tools/nx/safe-run-many.js --target=build --projects=tag:python",
    "nx:python-test": "node tools/nx/safe-run-many.js --target=test --projects=tag:python",
    "nx:python-lint": "node tools/nx/safe-run-many.js --target=lint --projects=tag:python",
    "nx:python-format": "node tools/nx/safe-run-many.js --target=format --projects=tag:python",
    "nx:python-format-check": "node tools/nx/safe-run-many.js --target=format-check --projects=tag:python",
    "nx:python-type-check": "node tools/nx/safe-run-many.js --target=type-check --projects=tag:python"
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx}": [
      "eslint --fix --config tools/node/configs/eslint.config.js",
      "prettier --write --config tools/node/configs/prettier-config.js"
    ],
    "*.json": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ],
    "*.{py,pyx,pxd,pxi,pyi}": [
      "\"%PYTHON_ENV%\\black\"",
      "\"%PYTHON_ENV%\\flake8\" --config=tools/python/.flake8",
      "\"%PYTHON_ENV%\\mypy\" --config-file=tools/python/mypy.ini"
    ],
    "*.ipynb": [
      "\"%PYTHON_ENV%\\black\""
    ],
    "*.{cs,vb}": [
      "dotnet format"
    ],
    "*.sql": [
      "\"%PYTHON_ENV%\\sqlfluff\" fix --dialect ansi --config=tools/python/.sqlfluff"
    ],
    "*.{yml,yaml}": [
      "\"%PYTHON_ENV%\\yamllint\" -c tools/python/.yamllint"
    ],
    "*.{xml,csproj,sqlproj}": [
      "npx prettify-xml"
    ]
  }
}
