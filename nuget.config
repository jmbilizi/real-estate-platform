<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <packageSources>
    <clear />
    <!-- Default NuGet package source -->
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />
    
    <!-- Uncomment and modify these lines to add private feeds if needed -->
    <!-- <add key="Company Private Feed" value="https://pkgs.dev.azure.com/your-org/_packaging/your-feed/nuget/v3/index.json" /> -->
    
    <!-- Add a local packages folder for locally built packages (optional) -->
    <!-- <add key="Local Packages" value="packages" /> -->
  </packageSources>

  <!-- Define mappings for specific packages to specific sources if needed -->
  <!-- <packageSourceMapping>
    <packageSource key="nuget.org">
      <package pattern="*" />
    </packageSource>
    <packageSource key="Company Private Feed">
      <package pattern="Company.*" />
    </packageSource>
  </packageSourceMapping> -->

  <!-- Configure default behaviors -->
  <config>
    <add key="globalPackagesFolder" value="packages" />
    <add key="dependencyVersion" value="Highest" />
  </config>

  <!-- Control allowed package sources during restore -->
  <packageRestore>
    <add key="enabled" value="true" />
    <add key="automatic" value="true" />
  </packageRestore>

  <!-- Disable package source control to prevent developers from selecting package sources through UI -->
  <disabledPackageSources>
    <clear />
  </disabledPackageSources>
</configuration>